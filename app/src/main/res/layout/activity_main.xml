<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Driving Apps"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/allowed_driving_apps_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Cycling Apps"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/allowed_cycling_apps_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Running Apps"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/allowed_running_apps_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Sleeping Apps"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/allowed_sleeping_apps_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Meeting Apps"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/allowed_meeting_apps_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/add_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Add App" />

        <Button
            android:id="@+id/check_indoor_outdoor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Check Indoor/Outdoor" />

        <TextView
            android:id="@+id/indoor_outdoor_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Indoor/Outdoor Status: Unknown" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to Google Calendar"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <!-- TextView for displaying events (optional, if you want to show in UI) -->
        <TextView
            android:id="@+id/tvEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IAE 101: Aitik's Office Hour"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center" />


    </LinearLayout>

</ScrollView>
